@page "/person/{id:int}"


@inject IPersonsViewmodel person


    <h3>Person Edit:</h3>


    <form>
        <div class="form-group">
            <label for="">Ime:</label>
            <input type="text" class="form-control" value="@person.PersonList[id-1].FirstName">
        </div>
        <div class="form-group">
            <label for="">Prezime:</label>

            <input type="text" class="form-control" value="@person.PersonList[id-1].LastName">
        </div>

        <button type="submit" class="btn btn-primary" >Edit</button>
    </form>



    @code {
        [Parameter]
        public int id { get; set; }
    }